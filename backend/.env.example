# ====================================
# CADLift Backend Configuration
# ====================================
# Copy this file to .env and update values for your environment

# ============ APPLICATION ============
APP_NAME=CADLift Backend
ENVIRONMENT=development
# Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ============ DATABASE ============
# SQLite for development
DATABASE_URL=sqlite+aiosqlite:///./cadlift.db
# PostgreSQL for production (uncomment and configure):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cadlift

# ============ SECURITY ============
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=change-me-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ============ CORS CONFIGURATION ============
# For development, allow all origins
CORS_ORIGINS=*
# For production, specify allowed domains (comma-separated):
# CORS_ORIGINS=https://cadlift.com,https://app.cadlift.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-Request-ID

# ============ STORAGE ============
STORAGE_PATH=./storage

# ============ TASK QUEUE ============
# Set to true to use Celery with Redis for async processing
ENABLE_TASK_QUEUE=false
REDIS_URL=redis://localhost:6379/0

# ============ FILE LIMITS ============
MAX_UPLOAD_MB=25

# ============ LLM INTEGRATION ============
# Options: none, openai
LLM_PROVIDER=none
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
LLM_TIMEOUT_SECONDS=30.0

# ============ VISION API ============
VISION_API_URL=
VISION_API_KEY=
VISION_TIMEOUT_SECONDS=30.0

# ============ STABLE DIFFUSION (LOCAL) ============
ENABLE_STABLE_DIFFUSION=false
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
# Leave empty for auto-detection (cuda if available, else cpu)
STABLE_DIFFUSION_DEVICE=
STABLE_DIFFUSION_HEIGHT=640
STABLE_DIFFUSION_WIDTH=640
STABLE_DIFFUSION_STEPS=30
STABLE_DIFFUSION_GUIDANCE=7.5
